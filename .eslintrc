{
  "parser": "babel-eslint",
  "extends": ["airbnb-base", "plugin:react/recommended"],
  "presets": [ "es2015", "react" ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "react",
    "jsx-a11y"
  ],
  "rules": {
    "arrow-body-style": 0,
    "semi": 0,
    "import/no-extraneous-dependencies": ["error", {"devDependencies": true}],
    "import/prefer-default-export": 0,
    "global-require": 1,
    "object-shorthand": 0,
    "no-unused-expressions": 0,
    "arrow-parens": [
      "error",
      "always"
    ],
    "no-param-reassign": 0,
    "no-underscore-dangle": 1,
    "comma-dangle": [
      2,
      "always-multiline"
    ]
  }
}
